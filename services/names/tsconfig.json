{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": ["src/*", "functions/*", "triggers/router.ts", "index.ts", "tests"]
}
